<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FFF"
    >
    <FrameLayout
        android:id="@+id/fl_fragmentcapp_nodata_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:src="@drawable/empty_view"
            android:id="@+id/iv_fragmnetcapp_nodata_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>
    <com.li.utils.ui.widget.SwipeRefreshLoadMore
        android:id="@+id/xsrl_home_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.li.utils.ui.widget.XRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_home_app"
            ></com.li.utils.ui.widget.XRecyclerView>
    </com.li.utils.ui.widget.SwipeRefreshLoadMore>

</FrameLayout>
