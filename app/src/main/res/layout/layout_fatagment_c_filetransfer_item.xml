<?xml version="1.0" encoding="utf-8"?>
<com.li.utils.ui.xlayout.XCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <com.li.utils.ui.progresslayout.ProgressLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:autoProgress="true"
        app:emptyColor="@color/colorPrimaryDark"
        app:loadedColor="@color/pink_pressed"
        app:maxProgress="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_filetransfer_host"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Host:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_filetransfer_ip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="IP:"
            android:textColor="@color/white" />
    </LinearLayout>
</com.li.utils.ui.xlayout.XCoordinatorLayout>