<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rxop.li.com.rxoperation">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name="com.li.pro.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.li.pro.view.activity.ActivityMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.li.pro.view.activity.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.li.pro.view.activity.ActivityMain"
            android:theme="@style/AppTheme.NoActionBar.SwipeBack">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.li.pro.view.activity.ActivityMain" />
        </activity>
        <service android:name="com.li.pro.service.FileReceiverService"></service>
    </application>

</manifest>